@model dynamic
<div class="row">
    <div class="card card-outline-secondary" style="width: 1140px; margin-top: -60px;">
        <div>
            <div>
                <div class="card-body">
                    <form method="post">
                        <textarea id="commentDescription" name="CommentDescription" class="form-control" rows="4" required placeholder="Yorumunuzu Yazın..."></textarea>

                        <input id="productId" type="hidden" name="ProductId" value="@Model.ProductId" />
                       
                        <button type="submit" id="btn" class="btn hvr-hover mt-3">
                            Yorumu Ekle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btn").click(function () {
            var values = {
                CommentDescription: $("#commentDescription").val(),
                ProductId: $("#productId").val()
            };
            $.ajax({
                type: "post",
                url: "/Comment/PartialAddComment/",
                data: values,
                success: function (func) {
                    var result = jQuery.parseJSON(func);
                }
            });
        });
    });
</script>