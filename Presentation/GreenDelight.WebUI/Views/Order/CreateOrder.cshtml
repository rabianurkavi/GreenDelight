@model GreenDelight.WebUI.Models.ViewModel.OrderPageVM

<style>
    .order-container {
        background-color: #fff;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', sans-serif;
        max-width: 900px;
        margin: auto;
    }

        .order-container h3 {
            color: #b0b435;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .order-container table {
            width: 100%;
            margin-bottom: 20px;
        }

        .order-container th {
            background-color: #f8f8f8;
            color: #555;
            padding: 10px;
        }

        .order-container td {
            padding: 10px;
            vertical-align: middle;
        }

    .order-total {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-top: 20px;
    }

        .order-total span {
            color: #b0b435;
        }

    .select-address-block {
        margin-top: 25px;
    }

    .select-label label {
        font-weight: 500;
        color: #333;
        display: block;
        margin-bottom: 8px;
    }

    .select-address-row {
        display: flex;
        gap: 15px;
        align-items: center;
        flex-wrap: wrap;
    }

    .styled-select {
        flex: 1;
        min-width: 220px;
        padding: 10px 15px;
        border: 2px solid #b0b435;
        border-radius: 8px;
        font-size: 1rem;
    }

    .btn-confirm-order {
        background-color: #b0b435;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 1rem;
        transition: background 0.3s ease;
        margin-top: 25px;
    }

        .btn-confirm-order:hover {
            background-color: #9ba931;
        }

    .btn-edit-address {
        background-color: transparent;
        border: 2px solid #b0b435;
        color: #b0b435;
        padding: 10px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

        .btn-edit-address:hover {
            background-color: #b0b435;
            color: #fff;
        }
</style>

<div class="order-container">
    <h3>Siparişi Onayla</h3>

    <h5>Ürünler</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Miktar</th>
                <th>Birim Fiyat</th>
                <th>Ara Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BasketItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice ₺</td>
                    <td>@(item.Quantity * item.UnitPrice) ₺</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="order-total">
        Toplam Tutar: <span>@Model.TotalPrice ₺</span>
    </div>

    <form asp-action="CreateOrder" asp-controller="Order" method="post">
        <input type="hidden" name="BasketId" value="@Model.BasketId" />

        <div class="select-address-block">
            <div class="select-label">
                <label for="SelectedAdressId">Adres Seçin:</label>
            </div>

            <div class="select-address-row">
                <select name="adressId" id="SelectedAdressId" class="styled-select" required>
                    @foreach (var adres in Model.Adresses)
                    {
                        <option value="@adres.ID">@adres.AdressName</option>
                    }
                </select>

                <a href="@Url.Action("Index", "Adress")" class="btn-edit-address">Adresleri Düzenle</a>
            </div>
        </div>

        <button type="submit" class="btn-confirm-order">Siparişi Onayla</button>
    </form>
</div>
