@model GreenDelight.Application.DTOs.AuthDtos.LoginDtos.LoginDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Sayfası</title>
    <style>
        /* CSS kodlarınız burada */
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Giriş Yap</h2>
        <form asp-action="Index" method="post">
            <div class="input-group">
                <input type="text" name="Email" placeholder="Kullanıcı Adı" required>
            </div>
            <div class="input-group">
                <input type="password" name="Password" placeholder="Şifre" required>
            </div>
            <button type="submit">Giriş</button>
        </form>
        <div class="footer-text">
            <p>Hesabınız yok mu? <a href="#" style="color: #000000; text-decoration: underline;">Kayıt olun</a></p>
        </div>
    </div>
</body>
</html>